@{
}
@model Studentportal.Models.AddStudentViewModel
<form method="post">
    <h1 class="text-center">Add Student</h1> 
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">School</label>
        <input type="text" class="form-control" asp-for="School" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="tel" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <label class="form-label">Province</label>
        <select class="form-control" asp-for="Province">
            <option value="">Select a province</option>
            <option value="central">Central Province</option>
            <option value="eastern">Eastern Province</option>
            <option value="north-central">North Central Province</option>
            <option value="northern">Northern Province</option>
            <option value="north-western">North Western Province</option>
            <option value="sabaragamuwa">Sabaragamuwa Province</option>
            <option value="southern">Southern Province</option>
            <option value="uva">Uva Province</option>
            <option value="western">Western Province</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Time slot</label>
        <select class="form-control" asp-for="PreferredTimeslot">
            <option value="">Select a time slot</option>
            <option value="friday-8-30-5-30">8:30 AM to 5:30 PM (Friday)</option>
            <option value="saturday-8-30-5-30">8:30 AM to 5:30 PM (Saturday)</option>
            <option value="sunday-5-30-8-30">5:30 PM to 8:30 PM (Sunday)</option>
        </select>
    </div>
    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary px-5">Save</button>
    </div>
</form>
